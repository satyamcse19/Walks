@model WalksUI.Models.Dto.RegionDto
@{
    ViewData["Title"] = "Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Add New Region</h2>

<form asp-action="Post" method="post">
    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RegionImageUrl"></label>
        <input asp-for="RegionImageUrl" class="form-control" />
        <span asp-validation-for="RegionImageUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add Region</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


