@model List<WalksUI.Models.Domain.Regions>

@{
    ViewData["Title"] = "Index";
}
<div class="mt-3">Region List</div>
<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Region" asp-action="AddRegion">Add Region</a>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th>Image Url</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.RegionImageUrl))
                    {
                        <img src="@item.RegionImageUrl" alt="@item.Name" style="width:100px;height:auto;" />
                    }
                    else
                    {
                        <span>Image not available</span>
                    }
                   
                </td>
                <td><a asp-controller="Region" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light">Edit</a></td>
                <td><a asp-controller="Region" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a></td>
            </tr>
            
        }
    </tbody>
</table>