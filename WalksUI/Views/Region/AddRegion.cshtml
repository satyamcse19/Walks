@model WalksUI.Models.Dto.AddRegionViewModel

@{
    ViewData["Title"] = "Add Region";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Region</h1>
<hr />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="AddRegion">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RegionImageUrl" class="control-label"></label>
                <input asp-for="RegionImageUrl" class="form-control" />
                <span asp-validation-for="RegionImageUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
